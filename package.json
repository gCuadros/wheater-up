{
  "name": "wheater-up",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "dev:web": "turbo run dev --filter=web",
    "tsc-watch": "turbo run tsc-watch",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "npm@8.19.3",
  "lint-stages": {
    "apps/**/*.{ts,tsx,md}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{ts,tsx,md}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
